<head>
    <style>
        .movie {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
            background-color: #1c1c1e; /* Dark background */
            color: #ffffff; /* White text */
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.2);
            text-align: center;
        }

        .movie h1 {
            font-size: 2rem;
            margin-bottom: 10px;
            color: #ffb509; /* Bright yellow title */
        }

        .intro {
            font-size: 1.2rem;
            line-height: 1.5;
            color: #ddd; /* Light gray text */
            margin-bottom: 20px;
            text-align: left;
            padding: 10px;
        }

        .movie img {
            width: 100%;
            max-width: 500px;
            height: auto;
            border-radius: 8px;
            margin-top: 15px;
            box-shadow: 0px 4px 8px rgba(255, 255, 255, 0.1);
        }

        a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #ffb509;
            color: #000;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.2s ease-in-out;
        }

        a:hover {
            background-color: #ffa500;
        }
    </style>
</head>

<a href="/">Back to home page</a>

<article class="movie">
  {{#if movie}}
    <h1>{{ movie.attributes.title }}</h1>
    <div class="intro">
      {{{ movie.attributes.intro }}}
    </div>
    {{#if movie.attributes.image }}
      <img src="{{ movie.attributes.image.url }}" alt="{{ movie.attributes.title }}">
    {{/if }}
  {{else}}
    <p>Movie details not available.</p>
  {{/if}}
</article>
